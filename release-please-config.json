{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "include-v-in-tag": false,
  "include-component-in-tag": false,
  "extra-label": "release",
  "packages": {
    ".": {
      "release-type": "python",
      "extra-files": [
        {
          "type": "generic",
          "path": "README.md"
        },
        {
          "type": "json",
          "path": "gemini-extension.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": ".claude-plugin/plugin.json",
          "jsonpath": "$.version"
        }
      ]
    }
  }
}
